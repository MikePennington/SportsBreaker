<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.breaker.newsstory">
  <class name="CategoryBean" table="categories">

	<id name="id" column="category_id">
		<generator class="native"/>
	</id>
	<property name="name" column="category_name"/>
	<property name="active" column="active"/>
	<property name="parentCategoryId" column="parent_category"/>
	<property name="sortOrder" column="sort_order"/>
	<property name="showInHeader" column="show_in_header"/>

  </class>
</hibernate-mapping>